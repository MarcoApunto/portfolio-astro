---
import SpeedInsights from '@vercel/speed-insights/astro';
import Analytics from '@vercel/analytics/astro'

import "../styles/global.css";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---

<!doctype html>
<html class="dark" lang="es">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Marco Antonio Ferreira Santos - Portfolio</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <script
      src="https://cdn.tailwindcss.com?plugins=forms,typography,container-queries"
    ></script>
    <Analytics />
    <SpeedInsights />
  </head>
  <body
    class="font-display bg-background-light dark:bg-background-dark text-text-light-secondary dark:text-text-dark-secondary transition-colors duration-300"
  >
    <Header />
    <main class="container mx-auto px-6">
      <slot />
    </main>
    <Footer />
  </body>
  <script src="@scripts/buttons.js"></script>
</html>
