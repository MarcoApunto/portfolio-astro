---
import Certifications from '@components/Certifications.astro'
---

<section class="py-20" id="education">
  <div class="text-center mb-12">
    <h2
      class="text-3xl md:text-4xl font-bold text-text-light-primary dark:text-text-dark-primary"
    >
      Educación
    </h2>
    <div class="mt-2 h-1 w-20 bg-primary mx-auto"></div>
  </div>
  <div class="max-w-4xl mx-auto space-y-8 relative">
    <div
      class="absolute left-4 top-4 bottom-4 w-0.5 bg-surface-light dark:bg-surface-dark"
    >
    </div>
    <div class="pl-12">
      <div class="flex items-center mb-1">
        <div
          class="bg-primary rounded-full h-8 w-8 flex items-center justify-center absolute left-0 -ml-0"
        >
          <span class="material-icons text-background-dark text-lg">school</span
          >
        </div>
        <h3
          class="text-xl font-semibold text-text-light-primary dark:text-text-dark-primary"
        >
          Centro Digital San Blas - Madrid | Certificado de Profesionalidad
        </h3>
      </div>
      <p class="text-primary font-medium">
        Desarrollo de Aplicaciones con Tecnologías Web | 2024 - 2025
      </p>
    </div>
    <div class="pl-12">
      <div class="flex items-center mb-1">
        <div
          class="bg-primary rounded-full h-8 w-8 flex items-center justify-center absolute left-0"
        >
          <span class="material-icons text-background-dark text-lg">school</span
          >
        </div>
        <h3
          class="text-xl font-semibold text-text-light-primary dark:text-text-dark-primary"
        >
          42 Madrid - Telefónica
        </h3>
      </div>
      <p class="text-primary font-medium">Programación C | 2022 - 2024</p>
    </div>
    <div class="pl-12">
      <div class="flex items-center mb-1">
        <div
          class="bg-primary rounded-full h-8 w-8 flex items-center justify-center absolute left-0"
        >
          <span class="material-icons text-background-dark text-lg">school</span
          >
        </div>
        <h3
          class="text-xl font-semibold text-text-light-primary dark:text-text-dark-primary"
        >
          IES Leonardo Da Vinci - Madrid | Grado Medio
        </h3>
      </div>
      <p class="text-primary font-medium">
        Sistemas Microinformáticos y Redes | 2018- 2020
      </p>
    </div>
  </div>

  <Certifications />

</section>
